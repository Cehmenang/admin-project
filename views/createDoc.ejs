<div class="flex bg-gray-100 min-h-screen items-center justify-center bg-gradient-to-r from-emerald-500 to-teal-800">
   
        <div class="container max-w-screen-lg mx-auto">

          <div>
            <h2 class="font-semibold text-[36px] text-white mb-[-5px]">Create Document</h2>
            <p class="text-gray-200 mb-5">Try to fill in every available input.</p>
      
            <div class="bg-white rounded-[20px] shadow-lg p-4 px-4 md:p-8 mb-6">
        
                    <form class="bg-white" action="/createDocument" method="POST" enctype="multipart/form-data">
                        <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4 border-gray-200">
                            <svg class="text-gray-500 h-5 w-5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M4 4a2 2 0 0 1 2-2h8a1 1 0 0 1 .707.293l5 5A1 1 0 0 1 20 8v12a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V4zm13.586 4L14 4.414V8h3.586zM12 4H6v16h12V10h-5a1 1 0 0 1-1-1V4z" />
                            </svg>
                            <input class="pl-2 outline-none border-none w-full outline-white" type="text" name="title" placeholder="Title"/>
                        </div>

                        <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4 border-gray-200">
                            <svg xmlns="http://www.w3.org/2000/svg"  fill="currentColor" class="bi bi-book h-5 w-5 text-gray-500" viewBox="0 0 16 16"> <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/> </svg>
                            <input class="pl-2 outline-none border-none w-full" type="text" name="description" placeholder="Description" />
                        </div>

                        <% if (role === "pengurus") { %>
                            <div class="select-kotak mb-4">

                                <select class="bg-gray-50 border-2 border-gray-200 text-gray-500 text-md rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full focus:text-gray-800" name="penerima">
                                  <option selected value="none">Pilih Penerima</option>
                                  <% users.forEach(user => { %>
                                    <option value="<%= user._id %>"><%= user.fullname %> - <%= user.company %></option>
                                  <% }) %>
                                </select>
                                <% if (error.param.length > 0 && error.param[0] == "penerima") { %>
                                    <span class="text-[13px] tracking-tight text-red-500"><%= error.msg[0] %></span>
                                <% } %>
                                
                            </div>
                        <% } %>
                               
                        <label class="flex flex-col items-center px-4 py-6 bg-white text-blue rounded-lg tracking-wide border-2 border-gray-200 cursor-pointer hover:bg-gray-200 w-full">
                            <svg class="w-12 h-12 text-gray-600" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                <path d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z" />
                            </svg>
                            <span class="mt-2 uppercase font-semibold tracking-tight text-gray-500 text-[18px]">Select a file</span>
                            <% if (error.param.length > 0 && error.param[0] == "file") { %>
                                <span class="text-[13px] tracking-tight text-red-500"><%= error.msg[0] %></span>
                            <% } else { %>
                                <span class="text-[13px] tracking-tight text-gray-500">Format file must be a pdf</span>
                            <% } %>
                            <input type='file' name="file" class="hidden" required/>
                        </label>

                        <button type="submit" class="block w-full bg-teal-600 mt-[30px] py-3 rounded-2xl text-white mb-2 text-[18px] hover:bg-teal-700">Submit</button>
                        
                    </form>

            </div>

          </div>
      
        </div>

</div>