<%- include('sidebar/admin') %> 

<div class="p-10 h-screen bg-gray-200 flex justify-end">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden w-[74.8%] mr-16">
    	<div class="w-full p-8 h-full bg-gray-800">

                <div class="mb-5">
                    <input type="text" class="w-full h-12 rounded focus:outline-none px-3 focus:shadow-md" placeholder="Search..."> <i class="fa fa-search text-gray-300 bg-gray-800 placeholder-gray-400"></i>
                </div>

				<div class="w-full h-full overflow-y-scroll">

					<% if (users && users.length > 0) { %>
						<table class="table text-gray-400 border-separate text-sm w-full">
					<thead class="bg-gray-900 text-gray-600 font-normal text-[16px]">
						<tr>

							<th class="p-3">Fullname</th>
							<th class="p-3">Email</th>
							<th class="p-3 text-left">Company</th>
							<th class="p-3 text-left">Phone</th>
						
						</tr>
					</thead>
					<tbody>
	
					<% users.forEach(user => { %>

						<tr class="bg-gray-900 text-gray-500 hover:text-gray-400">
							<td class="p-3">
								<div class="ml-[20px] font-bold text-[19px]">
									<%= user.fullname %>
								</div>
							</td>
							<td class="p-3">
								<div class="text-[15px] font-medium"><%= user.email %></div>
							</td>
							<td class="p-3 font-bold text-[16px]">
								<%= user.company %>
							</td>
							<td class="p-3 font-bold">
								<span class="bg-gray-800 py-1 px-4 rounded-xl text-[15px] text-gray-500"><%= user.phone %></span>
							</td>
						</tr>
					
					<% }) %>
					
					</tbody>
						</table>
					<% } %>

				</div>

        </div>
    </div>
</div>

<style>
	/* width */
::-webkit-scrollbar {
width: 8px;
}

/* Track */
::-webkit-scrollbar-track {
	background-color: rgb(31 41 55);
}

/* Handle */
::-webkit-scrollbar-thumb {
	background-color: rgb(55 65 81);
	border-radius:20px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
	background-color: rgb(75 85 99);
}
	.table {
		border-spacing: 0 15px;
	}

	i {
		font-size: 1rem !important;
	}

	.table tr {
		border-radius: 20px;
	}

	tr td:nth-child(n+5),
	tr th:nth-child(n+5) {
		border-radius: 0 .625rem .625rem 0;
	}

	tr td:nth-child(1),
	tr th:nth-child(1) {
		border-radius: .625rem 0 0 .625rem;
	}
</style>